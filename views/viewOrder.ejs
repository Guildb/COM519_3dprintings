<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Display Projects</title>
    <link href="/styles/styles.css" rel="stylesheet" type="text/css" />

    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.css">
</head>

<body class="sb-nav-fixed">
    <%- include('common/navbar'); -%>
        <div id="layoutSidenav">
            <%- include('common/sidenav'); -%>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">Orders</h1>
                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-table me-1"></i>
                                Orders Information
                            </div>
                            <div class="card-body">
                                <table id="table_id">
                                    <thead>
                                        <tr>
                                            <th>Buyer Name</th>
                                            <th>Project Name</th>
                                            <th>Status</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Buyer Name</th>
                                            <th>Project Name</th>
                                            <th>Status</th>
                                            <th></th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        <% orders.forEach(order => { %>
                                            <tr>
                                                <td><%= order.buyer_name %></td>
                                                <% projects.forEach(project => { 
                                                    if(project.id == order.project_id) 
                                                    { %>
                                                        <td><%=  project.name  %></td>
                                                        <%
                                                            if(order.status == 1)
                                                            { %>
                                                                <td> Open </td>
                                                            <%
                                                            }else{ %>
                                                                <td> Closed</td>
                                                            <%}
                                                        %>
                                                        <td>
                                                            <a  class="btn btn-primary btn-block"  href="<%=  project.link  %>">Link</a>
                                                            <% if(order.status ==1 ){ %>
                                                                <a class="btn btn-success btn-block"  href="/viewOrder/deliver/<%=  order.id  %>">Deliver</a>
                                                            <%}%>
                                                            <a  class="btn btn-danger btn-block"  href="/viewOrder/remove/<%=  order.id  %>">Remove</a>
                                                        </td>
                                                    <%}   
                                                })%>
                                            </tr>
                                        <%})%>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </main>
                <%- include('common/footer'); -%>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.6.3.js"
            integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM=" crossorigin="anonymous"></script>
        <script type="text/javascript" charset="utf8"
            src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
        <script>
            $(document).ready(function () {
                $('#table_id').DataTable();
            });
        </script>
</body>

</html>